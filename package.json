{
  "name": "snowglow",
  "version": "1.0.0",
  "description": "A discord bot for reaction roles",
  "main": "dist/bot.js",
  "type": "module",
  "repository": "https://github.com/BlackDemonFire/SnowGlow",
  "author": "BlackDemonFire <lucy@blackdemon.codes>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/node": "^16.11.10",
    "commitlint": "^17.0.2",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "ts-node": "10.7.0",
    "typescript": "4.5.2"
  },
  "dependencies": {
    "@discordjs/builders": "^0.15.0",
    "discord.js": "^13.8.1",
    "dotenv": "^16.0.1",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typeorm": "0.3.6",
    "winston": "^3.7.2"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": true,
    "tabWidth": 4,
    "singleQuote": false,
    "useTabs": false,
    "printWidth": 80
  },
  "scripts": {
    "lint": "prettier -c src",
    "prettify": "prettier -w src",
    "start:dev": "yarn lint && node --loader ts-node/esm src/bot.ts",
    "start": "node dist/bot.js",
    "typeorm": "typeorm-ts-node-esm",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
